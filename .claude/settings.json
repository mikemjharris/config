{
  "permissions": {
    "allow": [
      "Bash(rbenv:*)",
      "Bash(ruby --version:*)",
      "Bash(gem --version:*)",
      "Bash(command -v:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(tr:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/install-ruby.sh"
          }
        ]
      }
    ]
  }
}
